@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .auth-wrapper {
        min-height: calc(100vh - 140px);
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

        .auth-wrapper::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 30%, rgba(111,0,255,0.35), transparent 40%), radial-gradient(circle at 80% 70%, rgba(0,195,255,0.3), transparent 40%), radial-gradient(circle at 50% 50%, rgba(255,0,200,0.25), transparent 50%);
            filter: blur(80px);
            z-index: 0;
        }

    .auth-card {
        position: relative;
        z-index: 2;
        width: 420px;
        padding: 55px 45px;
        border-radius: 28px;
        background: rgba(255,255,255,0.06);
        backdrop-filter: blur(25px);
        box-shadow: 0 0 80px rgba(0,0,0,0.6);
        color: white;
    }

        .auth-card h2 {
            font-weight: 400;
            margin-bottom: 35px;
        }

    .auth-input {
        background: rgba(255,255,255,0.1);
        border: none;
        border-radius: 14px;
        padding: 14px;
        color: white;
        transition: all 0.25s ease;
    }

        .auth-input:hover {
            transform: translateY(-2px);
            background: rgba(255,255,255,0.18);
            box-shadow: 0 8px 25px rgba(0,195,255,0.25);
        }

        .auth-input:focus {
            background: rgba(255,255,255,0.15);
            box-shadow: 0 0 0 2px #00c3ff, 0 10px 30px rgba(0,195,255,0.35);
            transform: translateY(-2px);
            color: white;
        }

    .auth-btn {
        border: none;
        border-radius: 14px;
        padding: 14px;
        background: linear-gradient(90deg,#6f00ff,#00c3ff);
        transition: all 0.25s ease;
    }

        .auth-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(111,0,255,0.5);
            background: linear-gradient(90deg,#7f20ff,#00d4ff);
        }

        .auth-btn:active {
            transform: translateY(0);
            box-shadow: 0 4px 15px rgba(0,0,0,0.4);
        }

    .auth-link {
        position: relative;
        color: #ccc;
        text-decoration: none;
        display: inline-block;
        transition: all 0.25s ease;
    }

        .auth-link::after {
            content: "";
            position: absolute;
            width: 0%;
            height: 2px;
            left: 0;
            bottom: -4px;
            background: linear-gradient(90deg,#6f00ff,#00c3ff);
            transition: width 0.3s ease;
        }

        .auth-link:hover {
            color: white;
            transform: translateY(-2px);
        }

            .auth-link:hover::after {
                width: 100%;
            }
</style>

<div class="auth-wrapper">

    <div class="auth-card text-center">

        <h2>Welcome Back</h2>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" placeholder="Email" />
            </div>

            <div class="mb-4">
                <input asp-for="Input.Password" class="form-control auth-input" placeholder="Password" />
            </div>

            <button type="submit" class="btn auth-btn w-100 mb-4 text-white">
                Login
            </button>

            <a asp-page="./Register" class="auth-link small">
                Create account
            </a>

        </form>

    </div>

</div>