@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Admin Panel</h2>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa-solid fa-scissors me-2"></i>Hairstyles
                    </h5>
                    <a asp-controller="Hairstyles" asp-action="Index" class="btn btn-outline-primary w-100">
                        Manage
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa-solid fa-beard me-2"></i>Facial Hair
                    </h5>
                    <a asp-controller="FacialHairs" asp-action="Index" class="btn btn-outline-primary w-100">
                        Manage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
