@model VirtualHair.Models.FacialHair
@{
    ViewData["Title"] = "Facial Hair Details";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-sm p-4 text-center" style="max-width:650px; width:100%;">
        <h2 class="mb-4">@Model.Name</h2>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height:250px;" />
        }

        <p><strong>Color:</strong> @Model.DefaultColorHex</p>
        <p><strong>Created:</strong> @Model.CreatedAt.ToLocalTime()</p>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2 px-4">Edit</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Back</a>
        </div>
    </div>
</div>
