@model VirtualHair.Models.FacialHair

@{
    ViewData["Title"] = "Facial Hair Details";
}

<h2>Facial Hair Details</h2>

<div class="card shadow-sm p-3 mb-3">
    <div class="row g-3 align-items-center">
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height:250px;" />
            }
            else
            {
                <span class="text-muted">No image available</span>
            }
        </div>
        <div class="col-md-8">
            <h4>@Model.Name</h4>
            <p>
                <strong>Color:</strong>
                <span style="display:inline-block;width:24px;height:24px;background-color:@Model.DefaultColorHex;border:1px solid #ccc;"></span>
                @Model.DefaultColorHex
            </p>
            <p><strong>Created At:</strong> @Model.CreatedAt.ToLocalTime()</p>
        </div>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
    <i class="bi bi-pencil"></i> Edit
</a>
<a asp-action="Index" class="btn btn-secondary">
    <i class="bi bi-arrow-left"></i> Back
</a>
