@model IEnumerable<VirtualHair.Models.Post>

@{
    ViewData["Title"] = "Community Feed";
}

<div class="container mt-4 feed-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Community Feed</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Create Post
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5">
            <h4 class="text-secondary">No posts yet.</h4>
            <p>Be the first to create one!</p>
        </div>
    }
    else
    {
        foreach (var post in Model)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-user-circle fa-2xl me-2"></i>
                        <div>
                            <strong>@post.UserId</strong><br />
                            <small class="text-muted">@post.CreatedAt.ToLocalTime()</small>
                        </div>
                    </div>

                    <!-- Image -->
                    <div class="mb-3 text-center">
                        <img src="@post.ImagePath" class="img-fluid rounded" style="max-height: 450px; object-fit: cover;" />
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrWhiteSpace(post.Description))
                    {
                        <p>@post.Description</p>
                    }

                    <!-- Likes + Comments -->
                    <div class="d-flex align-items-center gap-3 mb-2">
                        <button class="btn btn-sm btn-outline-primary like-btn"
                                data-post-id="@post.Id">
                            <i class="fa-solid fa-thumbs-up"></i>
                            <span class="like-count">@post.Likes.Count()</span>
                        </button>

                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-outline-secondary">
                            <i class="fa-solid fa-comment"></i> Comments (@post.Comments.Count())
                        </a>
                    </div>

                </div>
            </div>
        }
    }

</div>

@section Scripts {
    <script>
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function () {

                const postId = this.dataset.postId;
                const likeCountSpan = this.querySelector(".like-count");

                fetch('/Feed/ToggleLike', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ postId: postId })
                })
                    .then(res => res.json())
                    .then(data => {
                        likeCountSpan.textContent = data.likes;
                    });
            });
        });
    </script>
}
