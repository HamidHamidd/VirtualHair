@model VirtualHair.Models.Hairstyle
@{
    ViewData["Title"] = "Delete Hairstyle";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-sm p-4 text-center" style="max-width:650px; width:100%;">
        <h2 class="mb-3 text-danger">Delete Hairstyle</h2>

        <div class="alert alert-danger mb-3">
            Are you sure you want to delete this hairstyle?
        </div>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height:250px;" />
        }

        <h4>@Model.Name</h4>
        <p><strong>Gender:</strong> @Model.Gender</p>
        <p><strong>Fade:</strong> @Model.DefaultFade</p>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4 me-2">Confirm</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </form>
    </div>
</div>
