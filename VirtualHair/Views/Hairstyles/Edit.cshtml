@model VirtualHair.Models.Hairstyle
@{
    ViewData["Title"] = "Edit Hairstyle";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-sm p-4" style="max-width:650px; width:100%;">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="ImagePath" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Length" class="form-label"></label>
                <input asp-for="Length" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DefaultFade" class="form-label"></label>
                <select asp-for="DefaultFade" class="form-select" asp-items="Html.GetEnumSelectList<FadeType>()"></select>
            </div>

            <div class="mb-3">
                <label asp-for="DefaultColorHex" class="form-label"></label>
                <input asp-for="DefaultColorHex" type="color" class="form-control form-control-color" />
            </div>

            <div class="mb-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="preview" style="max-height:160px;" class="img-thumbnail mb-2" />
                }
                <input asp-for="ImageFile" class="form-control" type="file" />
            </div>

            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-primary me-2 px-4">Update</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
