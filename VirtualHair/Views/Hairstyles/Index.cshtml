@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<VirtualHair.Models.Hairstyle>

@{
    ViewData["Title"] = "Hairstyles";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="mb-0">Hairstyles</h1>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-1"></i> Add Hairstyle
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No hairstyles yet.</div>
}
else
{
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Name" style="object-fit:cover;height:220px;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@item.Name</h5>
                        <p class="text-secondary mb-2">
                            <small>
                                Gender: @item.Gender • Length: @item.Length • Fade: @item.DefaultFade
                            </small>
                        </p>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fa-regular fa-eye me-1"></i> Details
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fa-regular fa-pen-to-square me-1"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fa-regular fa-trash-can me-1"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(
        (IPagedList)Model,
        page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>
}
