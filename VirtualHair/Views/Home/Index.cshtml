@{
    ViewData["Title"] = "Welcome to VirtualHair";
}

<section class="hero-section text-center py-5">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-3 text-gradient">VirtualHair</h1>
        <p class="lead mb-4">
            Upload your photo, try different hairstyles and facial styles, and discover your perfect look — all powered by AI and creativity.
        </p>
        <a href="/UserHairstyles/Preview" class="btn btn-lg hero-btn shadow-sm">
            Try Now <i class="fas fa-arrow-right ms-2"></i>
        </a>
    </div>
</section>

<section class="info-section text-center py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="shadow-box p-4 h-100">
                    <i class="fas fa-camera-retro fa-2x mb-3 text-primary"></i>
                    <h5>Upload or Capture</h5>
                    <p>Choose a photo or take one directly through the app to start styling.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="shadow-box p-4 h-100">
                    <i class="fas fa-cut fa-2x mb-3 text-primary"></i>
                    <h5>Try Hairstyles</h5>
                    <p>Experiment with styles, fades, and colors — all applied virtually.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="shadow-box p-4 h-100">
                    <i class="fas fa-magic fa-2x mb-3 text-primary"></i>
                    <h5>AI Recommendations</h5>
                    <p>Get smart suggestions based on your face shape and preferences.</p>
                </div>
            </div>
        </div>
    </div>
</section>
