@model VirtualHair.Models.UserHairstyle

@{
    ViewData["Title"] = "Delete Look";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 700px;">
        <h2 class="text-danger text-center fw-semibold mb-4">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>Delete Look
        </h2>

        <p class="text-center text-secondary mb-4">
            Are you sure you want to delete this look? This action <strong>cannot be undone</strong>.
        </p>

        <div class="border rounded p-3 mb-4 bg-body-tertiary">
            <h5 class="fw-semibold mb-2">@Model.Title</h5>

            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Hairstyle:</strong> @Model.Hairstyle?.Name ?? "No hairstyle"</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1"><strong>Facial Hair:</strong> @Model.FacialHair?.Name ?? "None"</p>
                </div>
            </div>

            <p class="text-muted mb-1"><strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy - HH:mm")</p>

            @if (Model.UserPhoto != null)
            {
                <div class="text-center mt-3">
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.UserPhoto.ImageData)"
                         alt="User Look Preview" class="img-fluid rounded shadow-sm" style="max-height: 280px;" />
                </div>
            }
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4 me-2">
                <i class="fa-solid fa-trash-can me-2"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fa-solid fa-arrow-left me-2"></i> Cancel
            </a>
        </form>
    </div>
</div>
