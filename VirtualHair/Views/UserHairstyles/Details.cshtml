@model VirtualHair.Models.UserHairstyle
@{
    ViewData["Title"] = "Look Details";
    var lookImg = Model.ImagePath ?? "/images/no-image.png";
    var hairstyleImg = Model.Hairstyle?.ImagePath;
    var facialImg = Model.FacialHair?.ImagePath;
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 980px;">
        <div class="card border-0 shadow-sm details-card">
            <div class="row g-0">

                <!-- LEFT: Main preview -->
                <div class="col-12 col-lg-7 details-left">
                    <div class="details-image-wrap">
                        <img src="@lookImg" alt="Look preview" class="details-image" />
                    </div>
                </div>

                <!-- RIGHT: Info -->
                <div class="col-12 col-lg-5 details-right">
                    <div class="p-4 p-lg-5 h-100 d-flex flex-column">

                        <!-- Title -->
                        <div class="mb-3">
                            <h2 class="details-title">@Model.Title</h2>
                            <div class="details-sub text-muted">
                                Saved look preview
                            </div>
                        </div>

                        <!-- Info list -->
                        <div class="details-section mb-4">
                            <div class="details-row">
                                <div class="details-label">Hairstyle</div>
                                <div class="details-value">
                                    @if (Model.Hairstyle != null)
                                    {
                                        <span>@Model.Hairstyle.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </div>
                            </div>

                            <div class="details-row">
                                <div class="details-label">Facial hair</div>
                                <div class="details-value">
                                    @(Model.FacialHair?.Name ?? "—")
                                </div>
                            </div>

                            <div class="details-row">
                                <div class="details-label">Created</div>
                                <div class="details-value">
                                    @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                </div>
                            </div>
                        </div>

                        <!-- Mini previews -->
                        <div class="details-section mb-4">
                            <div class="details-mini-title mb-2">Selected assets</div>

                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="mini-card">
                                        <div class="mini-label">Hairstyle</div>
                                        <div class="mini-img-wrap">
                                            @if (!string.IsNullOrWhiteSpace(hairstyleImg))
                                            {
                                                <img src="@hairstyleImg" class="mini-img" alt="Hairstyle" />
                                            }
                                            else
                                            {
                                                <div class="mini-placeholder">No hairstyle</div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="mini-card">
                                        <div class="mini-label">Facial hair</div>
                                        <div class="mini-img-wrap">
                                            @if (!string.IsNullOrWhiteSpace(facialImg))
                                            {
                                                <img src="@facialImg" class="mini-img" alt="Facial hair" />
                                            }
                                            else
                                            {
                                                <div class="mini-placeholder">No facial hair</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 rounded-pill">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger px-4 rounded-pill">
                                Delete
                            </a>

                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-lg-auto">
                                Back
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1080">
    <div id="toastMsg" class="toast align-items-center text-bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body" id="toastBody">Action completed.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const success = '@(TempData["SuccessMessage"] ?? "")';
            const error = '@(TempData["ErrorMessage"] ?? "")';
            if (success || error) {
                const toast = document.getElementById('toastMsg');
                const body = document.getElementById('toastBody');
                if (error) {
                    toast.classList.remove('text-bg-success');
                    toast.classList.add('text-bg-danger');
                    body.textContent = error;
                } else {
                    toast.classList.remove('text-bg-danger');
                    toast.classList.add('text-bg-success');
                    body.textContent = success;
                }
                new bootstrap.Toast(toast, { delay: 3000 }).show();
            }
        })();
    </script>
}

<style>
    /* --- iOS / clean modern style --- */
    .details-card {
        border-radius: 20px;
        overflow: hidden;
        background: var(--bs-body-bg);
    }

    .details-left {
        background: #0f1116;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px;
    }

    .details-image-wrap {
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        background: #0b0d12;
        box-shadow: 0 10px 30px rgba(0,0,0,0.35);
    }

    .details-image {
        width: 100%;
        height: auto;
        display: block;
        object-fit: contain;
        max-height: 640px;
    }

    .details-right {
        background: var(--bs-body-bg);
    }

    .details-title {
        font-weight: 700;
        letter-spacing: 0.2px;
        margin: 0;
        font-size: clamp(1.4rem, 2.2vw, 2rem);
    }

    .details-sub {
        font-size: 0.95rem;
        opacity: 0.75;
    }

    .details-section {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.07);
        border-radius: 14px;
        padding: 14px;
        backdrop-filter: blur(6px);
    }

    .details-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 2px;
        border-bottom: 1px dashed rgba(255,255,255,0.07);
    }

        .details-row:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

    .details-label {
        font-size: 0.9rem;
        color: var(--bs-secondary-color);
        font-weight: 600;
        width: 45%;
    }

    .details-value {
        font-size: 0.95rem;
        font-weight: 600;
        text-align: right;
        width: 55%;
        color: var(--bs-body-color);
    }

    .details-mini-title {
        font-size: 0.95rem;
        font-weight: 700;
        letter-spacing: 0.2px;
    }

    .mini-card {
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.07);
        padding: 10px;
        height: 100%;
        background: rgba(255,255,255,0.02);
    }

    .mini-label {
        font-size: 0.85rem;
        color: var(--bs-secondary-color);
        font-weight: 600;
        margin-bottom: 8px;
    }

    .mini-img-wrap {
        border-radius: 10px;
        overflow: hidden;
        background: #0b0d12;
        aspect-ratio: 1 / 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .mini-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .mini-placeholder {
        font-size: 0.85rem;
        color: #9aa3b2;
        text-align: center;
        padding: 10px;
    }

    /* FIXED MEDIA QUERY */
    @@media (max-width: 991px) {
        .details-left {
            padding: 8px;
        }

        .details-image {
            max-height: 520px;
        }
    }
</style>
