@model VirtualHair.Models.UserHairstyle

@{
    ViewData["Title"] = "Edit Look";
}

<div class="container mt-4">
    <h2 class="mb-4 fw-semibold text-center">
        <i class="fa-solid fa-pen-to-square me-2"></i>Edit Look
    </h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="shadow-sm p-4 rounded bg-body-tertiary">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold">Look Name</label>
            <input asp-for="Title" class="form-control" placeholder="e.g. Casual Fade or Business Style" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HairstyleId" class="form-label fw-semibold">Hairstyle</label>
            <select asp-for="HairstyleId" class="form-select" asp-items="@(new SelectList(ViewBag.Hairstyles, "Id", "Name", Model.HairstyleId))">
                <option value="">-- Select Hairstyle --</option>
            </select>
            <span asp-validation-for="HairstyleId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FacialHairId" class="form-label fw-semibold">Facial Hair (Optional)</label>
            <select asp-for="FacialHairId" class="form-select" asp-items="@(new SelectList(ViewBag.FacialHairs, "Id", "Name", Model.FacialHairId))">
                <option value="">-- None --</option>
            </select>
            <span asp-validation-for="FacialHairId" class="text-danger"></span>
        </div>

        @if (Model.UserPhoto != null)
        {
            <div class="text-center mb-3">
                <h6 class="text-muted">Current Photo:</h6>
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.UserPhoto.ImageData)"
                     alt="User Photo" class="img-fluid rounded shadow-sm" style="max-height: 280px;" />
            </div>
        }

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-save me-2"></i>Save Changes
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                <i class="fa-solid fa-arrow-left me-2"></i>Back to Gallery
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
