@model IEnumerable<VirtualHair.Models.UserHairstyle>

@{
    ViewData["Title"] = "My Gallery";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="mb-0">My Gallery</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus me-1"></i> Add New Look
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">You don’t have any saved looks yet.</div>
}
else
{
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="@item.Title" class="card-img-top" style="object-fit:cover;height:230px;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="text-secondary mb-1"><small>@item.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")</small></p>
                        <p class="mb-1"><strong>Hairstyle:</strong> @item.Hairstyle?.Name</p>
                        <p class="mb-2"><strong>Facial Hair:</strong> @(item.FacialHair?.Name ?? "None")</p>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fa-regular fa-eye me-1"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fa-regular fa-trash-can me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
