@model IEnumerable<VirtualHair.Models.UserHairstyle>
@{
    ViewData["Title"] = "My Gallery";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold">My Gallery</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Add New Look
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-muted mt-5">
            <i class="fa-regular fa-image fa-3x mb-3"></i>
            <h5>No looks yet</h5>
            <p class="small">Create your first look to see it here.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100 gallery-card">
                        <div class="gallery-img-wrapper">
                            <img src="@(item.ImagePath ?? "/images/no-image.png")"
                                 class="card-img-top gallery-img"
                                 alt="Hairstyle preview" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@item.Title</h5>
                            <p class="card-text small text-muted mb-2">
                                <i class="fa-solid fa-scissors me-1"></i>@item.Hairstyle?.Name
                                @if (item.FacialHair != null)
                                {
                                    <span> | <i class="fa-solid fa-beard me-1"></i>@item.FacialHair?.Name</span>
                                }
                            </p>
                            <p class="card-text small text-secondary">
                                <i class="fa-regular fa-calendar me-1"></i>@item.CreatedAt.ToShortDateString()
                            </p>
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
